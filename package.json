{
  "name": "ngx-color-scheme-library",
  "version": "19.2.0",
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rbalet/ngx-color-scheme"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve ngx-color-scheme-app",
    "build:lib": "ng build --configuration production ngx-color-scheme",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:ci": "jest --config jest.config.js --runInBand",
    "commit": "git-cz",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "copy-files": "cp README.md dist/ngx-color-scheme && cp LICENSE dist/ngx-color-scheme",
    "publish": "ng build ngx-color-scheme --configuration production && npm run copy-files && npm publish ./dist/ngx-color-scheme",
    "package": "run-s clean build:lib copy-files",
    "clean": "rimraf dist",
    "semantic-release": "semantic-release",
    "contributors:add": "all-contributors add",
    "contributors:generate": "all-contributors generate",
    "prepare": "husky"
  },
  "dependencies": {
    "@angular/animations": "~19.2.11",
    "@angular/common": "~19.2.11",
    "@angular/compiler": "~19.2.11",
    "@angular/core": "~19.2.11",
    "@angular/forms": "~19.2.11",
    "@angular/platform-browser": "~19.2.11",
    "@angular/platform-browser-dynamic": "~19.2.11",
    "@angular/router": "~19.2.11",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^19.2.12",
    "@angular/cli": "~19.2.12",
    "@angular/compiler-cli": "~19.2.11",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/jest": "^29.5.12",
    "@types/jest-when": "^3.5.5",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "all-contributors-cli": "^6.26.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-localstorage-mock": "^2.4.26",
    "jest-marbles": "^3.0.6",
    "jest-preset-angular": "^14.0.0",
    "jest-when": "^3.6.0",
    "lint-staged": "^16.0.0",
    "ng-packagr": "^19.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.4",
    "ts-node": "~10.9.2",
    "typescript": "~5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
